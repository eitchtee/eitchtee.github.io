<!-- Skills -->
{% if resume[resume_name]
    .skills and resume[resume_name]
    .skills | length > 0 %}
    {% call section.section() -%}
    {{ section.title('Skills' | i18n) }}
    <!-- Technical Skills -->
    <div class="two-columns-grid">
        {% for skill in resume[resume_name].skills %}
            <div class="fw-bold pe-4">{{ skill.name }}</div>
            {% if skill.keywords and skill.keywords | length > 0 %}
                <div>
                    {% for skill_keyword in skill.keywords %}
                        <span class="badge text-body bg-secondary-subtle force-print">{{ skill_keyword }}</span>
                    {% endfor %}
                </div>
            {% else %}
                <div></div>
            {% endif %}
        {% endfor %}
    </div>
    {%- endcall %}
{% endif %}