---
title: "Projects"
layout: default.njk
---

{% import "resume/macros/section.njk" as section %}

{% call section.section() %}
<main>
    <div class="container bg-body shadow-sm px-lg-5 py-4 text-body">
        {{ section.title('Projects' | i18n) }}

        <div class="">
            {% for project in collections.projects %}
                <div class="mb-4">
                    <a href="{{ project.data.url }}" class="mb-0 text-decoration-none" target="_blank">
                        <span class="fw-bold fs-5">{{ project.data.title }}</span>
                        {% if project
                            .data[locale]
                            .tag_line %}
                            <span> â€¢ {{ project.data[locale].tag_line }}</span>
                        {% endif %}
                    </a>
                    <div class="d-flex flex-row column-gap-2 flex-wrap mb-1">
                        {% if project.data.archived %}
                            <div>
                                <img alt="Project status" src="https://img.shields.io/badge/{{ "archived" | i18n}}-darkred?style=flat&label=status&labelColor=white">
                            </div>
                        {% else %}
                            <div>
                                <img alt="Project status" src="https://img.shields.io/badge/{{ "active" | i18n}}-darkgreen?style=flat&label=status&labelColor=white">
                            </div>
                        {% endif %}
                        {% for badge in project.data.badges %}
                            <div>
                                <img alt="Project Badge" src="{{ badge}}">
                            </div>
                        {% endfor %}
                    </div>
                    <div class="mb-1">
                        {{ project.data[locale].description }}
                    </div>
                    <div class="d-flex flex-row column-gap-3 flex-wrap">
                        {% for link in project.data.links %}
                            <div>
                                <a href="{{ link.url }}" target="_blank" class="fw-bold unroll-link">
                                    {{ link.label | i18n }}
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</main>
{% endcall %}