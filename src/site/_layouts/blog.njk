---
title: "Blog"
layout: default.njk
---

{% import "resume/macros/section.njk" as section %}

{% call section.section() %}
<main>
    <div class="container bg-body shadow-sm px-lg-5 py-4 text-body">
        {{ section.title('Blog') }}

        <div class="">
            {% for post in collections.post %}
                <div class="mb-4">
                    <div class="mb-0">
                        <a href="{{ post.page.url | locale_url }}" class="fs-6">
                            <span class="fw-bold">{{ post.data.title }}</span>
                        </a>
                    </div>
                    <div class="d-flex flex-md-row flex-column row-gap-1 column-gap-3 small text-secondary-emphasis">
                        <div>
                            <i class="fa-solid fa-calendar me-1"></i>{{ post.page.date | format_date_as_locale_string("DATE_SHORT") }}
                        </div>
                        <div>
                            <i class="fa-solid fa-language me-1"></i>{{ config.languages[post.data.language].name | i18n }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</main>
{% endcall %}